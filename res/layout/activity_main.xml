
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:fung="http://schemas.android.com/apk/res/com.fung.fungdroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   <com.fung.myui.CustomView 
        android:id="@+id/customview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#FFD700"
        fung:imageSrc="@drawable/clock"
        fung:imageAspectRatio="1.0"
        fung:imageAlpha="0.5"
        fung:imagePaddingLeft="5dp"
        fung:imagePaddingTop="5dp"
        fung:imagePaddingRight="5dp"
        fung:imagePaddingBottom="5dp"
        fung:imageScaleType="center"
        fung:titleText="这是一级标题"
        fung:titleTextSize="30sp"
        fung:titleTextColor="#1E90FF"
        fung:titlePaddingLeft="4dp"
        fung:titlePaddingTop="4dp"
        fung:titlePaddingRight="4dp"
        fung:titlePaddingBottom="4dp"
        fung:subTitleText="这是二级子标题"
        fung:subTitleTextSize="20sp"
        fung:subTitleTextColor="#00FF7F"
        fung:subTitlePaddingLeft="3dp"
        fung:subTitlePaddingTop="3dp"
        fung:subTitlePaddingRight="3dp"
        fung:subTitlePaddingBottom="3dp"/>

    <Button 
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="next page"/>
    
    
    

</RelativeLayout>

    <Button 
        android:id="@+id/handlerAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="handlerPage"/>
    
     <Button 
        android:id="@+id/btnDownloadThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="downloadThreads"/>
     

</LinearLayout>

