<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fung="http://schemas.android.com/apk/res/com.fung.fungdroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HanderActivity" >


    <Button
        android:id="@+id/handerBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="m2m" />

    
    <Button
        android:id="@+id/handerBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="c2m" />

     <Button
         android:id="@+id/handerBtn3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/handerBtn1"
         android:layout_below="@+id/handerBtn1"
         android:text="m2c" />
     
      <Button
         android:id="@+id/handerBtn4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/handerBtn1"
         android:layout_below="@+id/handerBtn1"
         android:layout_marginTop="52dp"
         android:text="c2c" />
      

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/handerBtn3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="104dp"
         android:text="Medium Text"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    
    
</RelativeLayout>
